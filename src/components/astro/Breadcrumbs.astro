---
interface Props {
    items: {
        name: string;
        item: string;
    }[];
}

const { items } = Astro.props;

const breadcrumbSchema = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: items.map((item, index) => ({
        "@type": "ListItem",
        position: index + 1,
        name: item.name,
        item: `https://www.hmz.technology${item.item}`,
    })),
};
---

<!-- JSON-LD for Breadcrumbs (AEO Visibility) -->
<script
    type="application/ld+json"
    dangerously:set-inner-html={JSON.stringify(breadcrumbSchema)}></script>

<nav aria-label="Breadcrumb" class="mb-8">
    <ol
        class="flex list-none p-0 text-sm md:text-base text-gray-500 dark:text-gray-400"
    >
        <li class="flex items-center">
            <a href="/" class="hover:text-blue-500 transition-colors">Home</a>
            <span class="mx-2">/</span>
        </li>
        {
            items.map((item, index) => (
                <li class="flex items-center">
                    {index === items.length - 1 ? (
                        <span
                            class="font-bold text-gray-900 dark:text-white truncate max-w-[200px]"
                            aria-current="page"
                        >
                            {item.name}
                        </span>
                    ) : (
                        <>
                            <a
                                href={item.item}
                                class="hover:text-blue-500 transition-colors"
                            >
                                {item.name}
                            </a>
                            <span class="mx-2">/</span>
                        </>
                    )}
                </li>
            ))
        }
    </ol>
</nav>
